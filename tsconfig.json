{
  "compilerOptions": {
    "target": "esnext", // Specify ECMAScript target version
    "lib": ["dom", "dom.iterable", "esnext"], // Include DOM libraries
    "allowJs": true, // Allow JavaScript files
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Do not emit output files
    "esModuleInterop": true, // Enable interoperability between ESModules and CommonJS
    "module": "esnext", // Set module system to ESNext
    "moduleResolution": "bundler", // Resolve modules using bundler-like resolution
    "resolveJsonModule": true, // Include JSON modules
    "isolatedModules": true, // Ensure that each file can be safely transpiled without relying on other imports
    "jsx": "preserve", // Keep JSX as it is for further transformation
    "incremental": true, // Enable incremental compilation for faster builds
    "baseUrl": ".", // Set base URL for resolving non-relative imports
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"], // Aliases for components
      "@pages/*": ["./src/pages/*"], // Alias for pages directory
      "@styles/*": ["./src/styles/*"], // Alias for styles directory
      "@utils/*": ["./src/utils/*"], // Alias for utility functions
      "@hooks/*": ["./src/hooks/*"], // Alias for custom hooks
      "@lib/*": ["./src/lib/*"], // Alias for libraries
      "@context/*": ["./src/context/*"] // Alias for context providers
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
